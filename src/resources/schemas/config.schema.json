{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "tradingPair": {
      "type": "object",
      "required": [
        "symbol",
        "baseAsset",
        "quoteAsset",
        "notionalMinimum",
        "priceDecimalPlaces",
        "quantityDecimalPlaces",
        "defaultLeverage",
        "maxLeverage",
        "maintenanceMarginRate",
        "lotSizeFilter",
        "priceFilter"
      ],
      "properties": {
        "symbol": {
          "type": "string",
          "description": "Trading pair symbol"
        },
        "baseAsset": {
          "type": "string",
          "description": "Base asset of the pair"
        },
        "quoteAsset": {
          "type": "string",
          "description": "Quote asset of the pair"
        },
        "notionalMinimum": {
          "type": "number",
          "description": "Minimum notional value for orders"
        },
        "priceDecimalPlaces": {
          "type": "integer",
          "description": "Number of decimal places for price"
        },
        "quantityDecimalPlaces": {
          "type": "integer",
          "description": "Number of decimal places for quantity"
        },
        "defaultLeverage": {
          "type": "integer",
          "description": "Default leverage value"
        },
        "maxLeverage": {
          "type": "integer",
          "description": "Maximum allowed leverage"
        },
        "maintenanceMarginRate": {
          "type": "number",
          "description": "Maintenance margin rate"
        },
        "lotSizeFilter": {
          "type": "object",
          "required": [
            "minQty",
            "maxQty",
            "stepSize"
          ],
          "properties": {
            "minQty": {
              "type": "string",
              "description": "Minimum quantity"
            },
            "maxQty": {
              "type": "string",
              "description": "Maximum quantity"
            },
            "stepSize": {
              "type": "string",
              "description": "Quantity step size"
            }
          }
        },
        "priceFilter": {
          "type": "object",
          "required": [
            "minPrice",
            "maxPrice",
            "tickSize"
          ],
          "properties": {
            "minPrice": {
              "type": "string",
              "description": "Minimum price"
            },
            "maxPrice": {
              "type": "string",
              "description": "Maximum price"
            },
            "tickSize": {
              "type": "string",
              "description": "Price tick size"
            }
          }
        }
      }
    },
    "riskProfile": {
      "type": "object",
      "required": [
        "maxPositionSize",
        "maxLeverage",
        "stopLossPercentage",
        "dailyLossLimit",
        "priceDeviationLimit",
        "description"
      ],
      "properties": {
        "maxPositionSize": {
          "type": "number",
          "description": "Maximum position size allowed"
        },
        "maxLeverage": {
          "type": "integer",
          "description": "Maximum leverage allowed"
        },
        "stopLossPercentage": {
          "type": "number",
          "description": "Default stop loss percentage"
        },
        "dailyLossLimit": {
          "type": "number",
          "description": "Maximum daily loss allowed"
        },
        "priceDeviationLimit": {
          "type": "number",
          "description": "Maximum allowed price deviation"
        },
        "description": {
          "type": "string",
          "description": "Profile description"
        }
      }
    },
    "strategy": {
      "type": "object",
      "required": [
        "name",
        "description",
        "riskLevel",
        "timeframe",
        "indicators"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "Strategy name"
        },
        "description": {
          "type": "string",
          "description": "Strategy description"
        },
        "riskLevel": {
          "type": "string",
          "enum": [
            "conservative",
            "moderate",
            "aggressive"
          ],
          "description": "Risk level of the strategy"
        },
        "timeframe": {
          "type": "string",
          "enum": [
            "1m",
            "5m",
            "15m",
            "1h",
            "4h",
            "1d"
          ],
          "description": "Trading timeframe"
        },
        "indicators": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "parameters"
            ],
            "properties": {
              "name": {
                "type": "string",
                "description": "Indicator name"
              },
              "parameters": {
                "type": "object",
                "description": "Indicator parameters"
              }
            }
          }
        },
        "customRules": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Custom trading rules"
        }
      }
    }
  },
  "type": "object",
  "oneOf": [
    {
      "type": "object",
      "required": [
        "pairs"
      ],
      "properties": {
        "pairs": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/tradingPair"
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "profiles",
        "defaultProfile",
        "globalLimits"
      ],
      "properties": {
        "profiles": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z_][a-zA-Z0-9_]*$": {
              "$ref": "#/definitions/riskProfile"
            }
          }
        },
        "defaultProfile": {
          "type": "string"
        },
        "globalLimits": {
          "type": "object",
          "required": [
            "absoluteMaxLeverage",
            "absoluteMaxPositionSize",
            "maxDailyLossLimit"
          ],
          "properties": {
            "absoluteMaxLeverage": {
              "type": "integer"
            },
            "absoluteMaxPositionSize": {
              "type": "number"
            },
            "maxDailyLossLimit": {
              "type": "number"
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "strategies"
      ],
      "properties": {
        "strategies": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z_][a-zA-Z0-9_]*$": {
              "$ref": "#/definitions/strategy"
            }
          }
        }
      }
    }
  ]
}
